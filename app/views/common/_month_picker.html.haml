.sidebar-block
  = rounded_corner_top

  .sidebar-title
    %h2 
      = t "views.month_picker.month"
      .right
        %small
          = link_to t("views.month_picker.current"), url_for(:year => Date.today.year, :month => Date.today.month)

  .sidebar-content
    .month-picker
      - form_tag url_for(:action => 'index', :id => nil), :method => :get do
        - prev_m = date - 1.month
        = link_to "&laquo;", url_for(:year => prev_m.year, :month => prev_m.month, :action => 'index', :id => nil), :class => 'prev'
        = select_month date, {}, { :onchange => "this.form.submit();", :name => "month" }
        = select_year date, {:end_year => Date.today.year }, { :onchange => "this.form.submit();", :name => "year" }
        - next_m = date + 1.month
        = link_to "&raquo;", url_for(:year => next_m.year, :month => next_m.month, :action => 'index', :id => nil), :class => 'next'

  = rounded_corner_bottom